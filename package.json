{
  "name": "ericconstantinides.com.react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "express": "^4.16.3",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "node-sass-chokidar": "^0.0.3",
    "path": "^0.12.7",
    "prettier-standard": "^6.0.0",
    "react": "^15.6.2",
    "react-body-classname": "^1.2.0",
    "react-document-title": "^2.0.3",
    "react-dom": "^15.6.2",
    "react-ga": "^2.5.3",
    "react-html-parser": "^2.0.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-scripts": "1.0.12",
    "redux": "^3.7.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier-standard",
      "git add"
    ]
  },
  "scripts": {
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "yarn run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "precommit": "lint-staged",
    "start": "react-scripts start",
    "server": "node server.js",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "restart": "pm2 startOrRestart ecosystem.config.js",
    "deploy": "yarn run build && git add . && git commit -m 'Buildout' && git push && pm2 deploy ecosystem.config.js production"
  }
}
